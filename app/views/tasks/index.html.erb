<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <% if @task.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>期限</th>
          <th>タスク</th>
          <th>進行状況</th>
        </tr>
      </thead>
      <tbody>
        <% @task.each do |task| %>
          <tr>
            <td><%= link_to task.id, task  %></td>
            <td><%= task.deadlinemonth %>/<%= task.deadlinedate %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @task %>
    </div>
  <% end %>
  
  <%= link_to 'タスクの追加', new_task_path, class: 'btn btn-primary' %>
  <%= link_to 'ユーザー', users_path, class: 'btn btn-default' %>
<% else %>
  <div class="center jumbotron">
  <div class="text-center">
    <h1>タスク管理アプリへようこそ</h1>
    <%= link_to 'サインアップ', signup_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-info' %>
  </div>
</div>
<% end %>