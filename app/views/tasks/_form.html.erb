<%= form_for(task) do |f| %>
 <% if task.errors.any? %>
  <div id="error_explanation">
   <ul>
    <% task.errors.full_messages.each do |task| %>
     <li><%= task %></li>
    <% end %>
   </ul>
  </div>
 <% end %>
 
 <%= f.label :content, 'タスク' %>
 <%= f.text_field :content %>
 
 <%= f.label :status, '進行状況' %>
 <%= f.select :status, [['未着手'], ['進行中'], ['達成済']] %>
 
 <%= f.label :deadlinemonth, '期限' %>
 <%= f.text_field :deadlinemonth %>月
 <%= f.text_field :deadlinedate %>日
 
 <%= f.submit '作成' %>
<% end %>